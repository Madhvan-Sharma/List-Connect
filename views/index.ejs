<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>TODO app</title>

    <!-- Font awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <!-- Bootstrap Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <!-- Personal Stylesheet -->
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>


    <div class="container-md py-5">
         <!-- HEADING -->
        <div class="row">
            <div class="col-12 mb-3 mt-5">

                <h1>TODO List app</h1>

            </div>
        </div>

        <form action="/addtask" method="post">

            <!-- DESCRIPTION INPUT -->        
            <div class="form-group row px-5">
                <div class="col-12">

                    <label for="description">DESCRIPTION</label>
                    <input type="text" class="form-control" name="description" id="description" placeholder="What do you need to do?" required>

                </div>
            </div>

            <!-- Category and due date -->
            <div class="form-group row px-5 mt-3">

                <!-- CATEGORY -->
                <div class="col-6">

                    <label for="floatingSelect">CATEGORY</label>
                    <select class="form-select" name="category" id="floatingSelect" aria-label="Floating label select example">
                        <option selected>Choose the Category</option>
                        <option value="success">Personal</option>
                        <option value="primary">Work</option>
                        <option value="info">Cleaning</option>
                        <option value="danger">School</option>
                        <option value="secondary">Other</option>
                    </select>

                </div>

                <!-- Due Date -->
                <div class="col-6">
                    
                    <label for="example-date-input">DUE DATE</label>    
                    <input name="date" class="form-control" type="date" id="example-date-input" placeholder="dd/mm/yyyy">

                </div>

            </div>

            <!-- BUTTONS -->
            <div class="form-group row px-5 mt-5">

                <div class="col-12 d-flex justify-content-center mb-5">
                    <!-- ADD TASK BUTTON -->
                    <button type="submit" class="btn btn-dark btn-lg mx-5"><i class="fas fa-plus"></i> &nbsp; ADD TASK</button>
                    <!-- DELETE TASKS BUTTON -->
                    <button type="submit" form="delete-tasks" class="btn btn-danger btn-lg"><i class="fas fa-trash-alt"></i> &nbsp; DELETE TASKS</button>
                </div>
                
            </div>

        </form>

        <!-- TASKS -->
        <form action="/delete-tasks" method="post" id="delete-tasks">
            <% for(let i = 0 ;i < tasks.length ; i++){ %>

                <!-- Bootstrap Card -->
                <div class="card border-light  mb-2 mt-2">
                    <div class="row g-0">

                        <div class="col-1">
                            <input type="checkbox" name="task-id" value="<%= tasks[i].id %>">
                        </div>

                        <div class="col-1"></div>

                        <div class="col-10">
                            <div class="card-body d-flex justify-content-between">

                                <p class="card-text"><%= tasks[i].description %></p>
                                <p class="card-text"> <button type="button" class="btn btn-<%= tasks[i].category %>"> <%= categories[tasks[i].category] %>  </button> </p>
                                
                            </div>

                            <div class="card-footer bg-transparent">Due &nbsp; <%= tasks[i].date %> &nbsp; <i class="far fa-calendar-alt"></i></div>
                        </div>

                    </div>
                </div>

            <% } %>
        </form>


    



    <!-- Boostrap JS cdn -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
    <!-- Personal JS files -->
    <script src="/Javascript/index.js"></script>
</body>
</html>